---
import { ChevronLeft, ChevronRight } from "lucide-react";
import Layout from "./Layout.astro";
import { Button } from "@/components/ui/button";

type Props = {
  prev?: string;
  next?: string;
};

const { prev, next } = Astro.props;
---

<Layout>
  <div class="flex flex-1 gap-4 my-0">
    {/* Left Sidebar */}
    <div class="sticky flex-none top-32 h-fit px-6 mt-4 mr-auto">
      {
        prev && (
          <Button variant="outline" size="icon">
            <a href={prev}>
              <ChevronLeft />
            </a>
          </Button>
        )
      }
    </div>

    {/* Main Content */}
    <slot />

    {/* Right Sidebar */}
    <div class="sticky flex-none top-32 h-fit px-6 mt-4 ml-auto">
      {
        next && (
          <Button variant="outline" size="icon">
            <a href={next}>
              <ChevronRight />
            </a>
          </Button>
        )
      }
    </div>
  </div>
</Layout>
