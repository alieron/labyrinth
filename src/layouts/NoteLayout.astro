---
import { ChevronLeft, ChevronRight } from "lucide-react";
import Layout from "./Layout.astro";
import { ButtonLink } from "@/components/ui/button-link";

type Props = {
  prev?: string;
  next?: string;
};

const { prev, next } = Astro.props;
---

<Layout>
  <div class="flex flex-1 gap-4 my-0">
    {/* Left Sidebar */}
    <div class="sticky flex-none top-32 h-fit px-6 mt-4 mr-auto">
      {
        prev && (
          <ButtonLink variant="outline" size="icon" href={prev}>
            <ChevronLeft />
          </ButtonLink>
        )
      }
    </div>

    {/* Main Content */}
    <slot />

    {/* Right Sidebar */}
    <div class="sticky flex-none top-32 h-fit px-6 mt-4 ml-auto">
      {
        next && (
          <ButtonLink variant="outline" size="icon" href={next}>
            <ChevronRight />
          </ButtonLink>
        )
      }
    </div>
  </div>
</Layout>
