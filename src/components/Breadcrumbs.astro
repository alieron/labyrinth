---
import { BookOpen } from "lucide-react";
import { toSlug } from "@/utils/slug";

type Props = {
  path: string;
  isFolder: boolean;
};

const { path, isFolder } = Astro.props;
const splitPath = path ? path?.split("/") : [];
let partialPath = "/notes";
---

<nav class="text-lg text-muted-foreground items-center mb-6">
  <ul class="flex flex-wrap items-center gap-2">
    <li>
      <a
        href="/notes/"
        class=`${splitPath.length === 0 && 'text-foreground '}hover:text-primary`
      >
        <BookOpen />
      </a>
    </li>
    <li class=`${splitPath.length === 0 && 'text-foreground'}`>/</li>
    {
      splitPath.map((part, idx) => {
        partialPath += `/${part}`;
        const isLast = idx === splitPath.length - 1;
        return isLast ? (
          <>
            <li>
              <span class="text-foreground font-medium">
                {decodeURIComponent(part)}
              </span>
            </li>
            {isFolder && <li class="text-foreground">/</li>}
          </>
        ) : (
          <>
            <li>
              <a href={toSlug(`${partialPath}/`)} class="hover:text-primary">
                {decodeURIComponent(part)}
              </a>
            </li>
            <li>/</li>
          </>
        );
      })
    }
  </ul>
</nav>
